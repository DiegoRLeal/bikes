<div class="container">
    <h1 class="h3 mb-5 mt-2">These are the Bikes you will rent</h1>
    <div class="row justify-content-center">


      <div class="col-md-6 ">
      <div class="card position-sticky top-0">
          <div class="p-1 bg-light bg-opacity-10">
          <% current_user.user_carts.each do |cart| %>
          <div class='row'>
          <div class="card-title mb-3 image-container"> <%= cl_image_tag cart.product.photos.first.key, height: 100, width: 125, crop: :fill, radius: 20 %> </div>
            <h6 class="card-title mb-3"><%= cart.product.bike %> - Localization: <%= cart.product.localization %></h6>
            </div>
            <div class="d-flex justify-content-between mb-1 small">
              <span>Subtotal:</span> <span> $<%= cart.product.price %> </span>
              <%= link_to 'X', user_cart_path(cart), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
            </div>
            <% end %>

            <hr>
            <div class="d-flex justify-content-between mb-4 small">
              <span>TOTAL:</span> <strong class="text-dark">
              $<% sum = 0 %>
              <% current_user.user_carts.each do |p| %>
              <% price = p.product.price  %>
              <% sum+=price  %>

              <% end %>
              <%= sum %>
                         </strong>
            </div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5 mb-4">
    <%= link_to "Checkout", products_path, class:"btn btn-primary" %>
    </div>
                      </div>
        </div>
      </div>
    </div>


    <div class="container mt-4 mb-5">
    <%= link_to "Back", products_path, class:"btn btn-secondary" %>
    </div>
  </div>
