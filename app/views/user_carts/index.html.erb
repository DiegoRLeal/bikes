<div class="container">
    <h1 class="h3 mb-5 mt-2">These are the Bikes you will rent</h1>
    <div class="row">

      <!-- Right -->
      <div class="col-lg-3">
      <div class="card position-sticky top-0">
          <div class="p-3 bg-light bg-opacity-10">
          <% @products.each do |product| %>
            <h6 class="card-title mb-3"><%= product.bike %> - Localization: <%= product.localization %></h6>
            <div class="d-flex justify-content-between mb-1 small">
              <span>Subtotal $</span> <span> $<%= product.price %> </span>
            </div>
            <% end %>

            <hr>
            <div class="d-flex justify-content-between mb-4 small">
              <span>TOTAL</span> <strong class="text-dark">
              <% sum = 0 %>
              <% @products.each do |product| %>
              <% price = product.price  %>
              <% sum+=price  %>
              <% end %>
              <%= sum %>

              </strong>
            </div>
                        <button class="btn btn-primary w-100 mt-2">Place order</button>
          </div>
        </div>
      </div>
    </div>
  </div>
