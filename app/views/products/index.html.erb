<div class="container mt-4">
    <h1>All products</h1>
    <p></p>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Model</th>
        <th>Localization</th>
        <th>Price</th>
        <th>Condition</th>
        <th>Availability</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
      <tr>
        <span class="mytooltip tooltip-effect-1">
        <td class="tooltip-item"><%= link_to product.bike, product_path(product) %></td>
        <span class="tooltip-content clearfix">
        <%# <img <%= cl_image_tag product.photos[0], height: 300, width: 400, crop: :fill, radius: 60 %>
        <span class="tooltip-text"> <%= product.bike %> </span>
        </span>
        </span>

          <td><%= product.localization %></td>
          <td><%= number_to_currency product.price %></td>
          <td><%= product.bike_condition %></td>
          <%# <td><%= product.available=true %></td>
            <% if product.available? %>
              <td><%= link_to 'Available', products_path(product), class:"btn btn-outline-primary" %></td>
            <% else %>
              <td><button type="button" class="btn btn-outline-dark" disabled>Not Available</button></td>
            <% end %>

            <% if policy(product).edit? %>
              <td><%= link_to "Edit", edit_product_path(product), class:"btn btn-outline-primary" %></td>
            <% end %>

            <% if policy(product).destroy? %>
              <td><%= link_to "Delete",
                              product,
                              method: :delete,
                              data: { confirm: "Are you sure?" }, class:"btn btn-outline-primary" %></td>
            <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container mt-4">
  <%= link_to "Back", root_path, class:"btn btn-secondary" %>
</div>
