<div class="container mt-4 text-center">
  <div class="row">
    <div class="col-sm-12">
      <div class="well">
        <% @product.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, radius: 60 %>
        <% end %>
      </div>
    </div>
  </div>

    <div class="row mt-4">
      <div class="col-sm-12">
        <div class="panel panel-default text-center">
          <h4><%= @product.bike %></h4>
        </div>
      </div>
    </div>

    <div class="row">
        <div class="col-sm-12 mb-4">
          <div class="well default text-left">
            <h5><%= @product.localization %></h5>
            <h5>Price: $<%= @product.price %></h5>
            <h5>Condition: <%= @product.bike_condition %></h5>
          </div>
        </div>
        <div class="row justify-content-center">


      <div class="col-sm-6">
      <div class="card position-sticky top-0">
          <div class="p-1 bg-light bg-opacity-10">
          <%= simple_form_for [@product, @user_cart] do |f| %>
            <div class="row justify-content-center">
                <div class="col-md-6">
                <%= f.input :status %>

            <br />
            <%= f.submit "Book Now", id: "btn_book", class: "btn btn-primary" %>
        <% end %>

            <hr>
            <div class="d-flex justify-content-between mb-4 small">
              <span>TOTAL</span> <strong class="text-dark">
                    <%= @product.price %>

              </strong>
            </div>
                      </div>
        </div>
      </div>

    </div>
</div>

<div class="container mt-4">
  <%= link_to "Back", products_path, class:"btn btn-secondary" %>
</div>
